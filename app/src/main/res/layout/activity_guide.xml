<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.myshoppingapplication.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/enter_btn"
        android:layout_above="@+id/vp_indicator"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击更多精彩"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:background="@null"
        android:visibility="gone"/>

  <com.viewpagerindicator.CirclePageIndicator
      android:id="@+id/vp_indicator"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="6dp"
      app:centered="true"
      app:fillColor="@android:color/white"
      app:pageColor="@android:color/darker_gray"
      app:radius="3dp"
      app:snap="true"
      />


</RelativeLayout>
